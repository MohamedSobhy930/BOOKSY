@{
	var status = Context.Request.Query["status"].ToString().ToLower();
	var pending = "text-primary";
	var inProcess = "text-primary";
	var approved = "text-primary";
	var completed = "text-primary";
	var all = "text-primary";

	switch(status)
	{
		case "pending":
			pending = "active text-white bg-primary";
			break;
		case "inprocess":
			inProcess = "active text-white bg-primary";
			break;
		case "approved":
			approved = "active text-white bg-primary";
			break;
		case "completed":
			completed = "active text-white bg-primary";
			break;
		default:
			all = "active text-white bg-primary";
			break;
	}
}
<div class="card  shadow border-0 my-4">
	<div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
		<div claas="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Order List</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="d-flex justify-content-between pb-5 pt-2">
			<div class="btn-group" role="group">
				<a href="/Admin/Order/Index" class="btn @all">All</a>
				<a href="/Admin/Order/Index?status=pending" class="btn @pending">Pending</a>
				<a href="/Admin/Order/Index?status=inprocess" class="btn @inProcess">In Process</a>
				<a href="/Admin/Order/Index?status=approved" class="btn @approved">Approved</a>
				<a href="/Admin/Order/Index?status=completed" class="btn @completed">Completed</a>
			</div>
			
		</div>
		<table id="tableData" class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>
						Id
					</th>
					<th>
						Name
					</th>
					<th>
						Phone Number
					</th>
					<th>
						Email
					</th>
					<th>
						Status
					</th>
					<th>
						Total
					</th>
					<th>

					</th>
				</tr>
			</thead>
		</table>
	</div>
</div>

@section Scripts {
	<script src="~/js/order.js"></script>
}
