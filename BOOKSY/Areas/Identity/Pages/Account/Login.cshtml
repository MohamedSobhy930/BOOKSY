
 @page
@model LoginModel

@{
    ViewData["Title"] = "Hello!";
}

<h1 class="text-center my-4">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form id="account" method="post" class="border rounded shadow p-4 bg-light">
            <h3 class="text-center mb-4">Log in to your Account</h3>

            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                <label class="form-check-label" asp-for="Input.RememberMe">
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>

            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">
                <i class="bi bi-box-arrow-in-right me-1"></i> Log in
            </button>

            <div class="mt-3 text-center">
                <a id="forgot-password" asp-page="./ForgotPassword" class="d-block">Forgot your password?</a>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="d-block">Register as a new user</a>
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="d-block">Resend email confirmation</a>
            </div>

            <!-- OR Separator -->
            <div class="d-flex align-items-center my-4">
                <hr class="flex-grow-1" />
                <span class="mx-2 text-muted">or</span>
                <hr class="flex-grow-1" />
            </div>

            <!-- External Login Section -->
            <div class="text-center">

                @if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <p class="text-muted small">
                        No external authentication services configured.
                        <a href="https://go.microsoft.com/fwlink/?LinkID=532715" target="_blank">
                            Learn more
                        </a>
                    </p>
                }
                else
                {
                    <div class="d-grid gap-2">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <form asp-page="./ExternalLogin"
                                  asp-route-provider="@provider.Name"
                                  asp-route-returnUrl="@Model.ReturnUrl"
                                  method="post"
                                  class="d-grid mb-2">
                                <button type="submit" class="btn btn-outline-danger d-flex align-items-center justify-content-center py-2">
                                    <img src="https://developers.google.com/identity/images/g-logo.png" width="20" height="20" class="me-2" />
                                    Continue with @provider.DisplayName
                                </button>
                            </form>
                        }

                    </div>
                }
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
