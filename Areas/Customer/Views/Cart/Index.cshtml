
@model ShoppingCartVM

<form method="post" asp-action="UpdateCart">
    <div class="card shadow border-0">
        <div class="card-header bg-secondary bg-gradient text-light py-4">
            <div class="row px-4">
                <div class="col-6">
                    <h5 class="pt-2 text-white">Shopping Cart</h5>
                </div>
            </div>
        </div>
        <div class="card-body my-4">
            <div class="row mb-3 pb-3">
                <div class="col-md-2 offset-md-1">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-primary text-uppercase mb-5 btn-sm">
                        <small>Continue Shopping</small>
                    </a>
                </div>
                <div class="col-md-10 offset-md-1">
                    @if (!Model.ShoppingCartList.Any())
                    {
                        <div class="alert alert-info">Your cart is empty.</div>
                    }
                    else
                    {
                        @for (int i = 0; i < Model.ShoppingCartList.Count(); i++)
                        {
                            var item = Model.ShoppingCartList.ToList()[i];
                            <div class="row border-bottom pb-3 align-items-center">
                                <div class="d-none d-lg-block col-lg-1 text-center py-2">
                                    <img src="@item.Product.ImageUrl" class="rounded" width="100%" alt="@item.Product.Title" />
                                </div>
                                <div class="col-12 col-lg-6 pt-md-3">
                                    <h5 class="text-uppercase text-secondary"><strong>@item.Product.Title</strong></h5>
                                    <div class="row pl-2 my-3">
                                        <p class="text-secondary lh-sm">@Html.Raw(@item.Product.Description)</p>
                                    </div>
                                </div>

                                <div class="col-12 col-lg-5 text-center row">
                                    <div class="col-3 text-md-right pt-2 pt-md-4">
                                        <h6 class="fw-semibold">
                                            @item.Price.ToString("C")
                                            <span class="text-muted">&nbsp;x&nbsp;</span>

                                            <!-- Bind Count -->
                                            <input asp-for="ShoppingCartList.ToList()[@i].Count" type="number" min="1" max="1000"
                                                   class="form-control d-inline w-auto" style="width: 60px;" />
                                        </h6>
                                    </div>

                                    <input asp-for="ShoppingCartList.ToList()[@i].ProductId" type="hidden" />
                                    <input asp-for="ShoppingCartList.ToList()[@i].AppUserId" type="hidden" />

                                    <div class="col-6 col-sm-4 col-lg-6 pt-2">
                                        <div class="w-75 btn-group" role="group">
                                            <a asp-action="Plus" asp-route-cartId="@item.Id"  class="btn btn-outline-primary bg-gradient py-2" >
                                                <i class="bi bi-plus-square"></i>
                                            </a>
                                            &nbsp;
                                            <a asp-action="Minus" asp-route-CartId="@item.Id"  class="btn btn-outline-primary bg-gradient py-2" >
                                                <i class="bi bi-dash-square"></i>
                                            </a>
                                        </div>
                                    </div>

                                    <div class="col-3 col-sm-4 col-lg-2 offset-lg-1 text-right pt-2">
                                        <a asp-action="Remove" asp-route-CartId="@item.Id" class="btn btn-danger bg-gradient py-2" >
                                            <i class="bi bi-trash-fill"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="col-12 text-end">
                                    <span class="fw-bold">Item Total: @((item.Price * item.Count).ToString("C"))</span>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>

            <div class="card-footer bg-white border-0">
                <div class="row">
                    <div class="col-md-4 offset-md-4">
                        <ul class="list-group mb-4">
                            <li class="d-flex justify-content-between align-items-center">
                                <h5 class="text-dark fw-semibold text-uppercase">Total (USD)</h5>
                                <h4 class="text-dark fw-bolder">
                                    @Model.OrderHeader.OrderTotal.ToString("C")
                                </h4>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 offset-md-5">
                        <a asp-action="CheckOut" class="btn btn-primary border-0 bg-gradient w-100 py-2">
                            Checkout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>



